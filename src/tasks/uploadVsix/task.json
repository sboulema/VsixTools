{
  "id": "76c103d8-c5e8-4f03-acaf-e31fbb276c84",
  "name": "VsixToolsUploadVsix",
  "friendlyName": "Vsix Tools - Upload Vsix",
  "description": "Upload Vsix.",
  "helpMarkDown": "[More Information](https://marketplace.visualstudio.com/items?itemName=SamirBoulema.Vsix-Tools)",
  "category": "Build",
  "author": "Samir L. Boulema",
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 0
  },
  "instanceNameFormat": "Upload Vsix",
  "visibility": [
    "Build"
  ],
  "inputs": [
    {
      "name": "UploadTo",
      "type": "radio",
      "label": "Upload to",
      "required": true,
      "defaultValue": "OpenGallery",
      "helpMarkDown": "Publish to Vsix Open Gallery or MyGet Vsix service connection.",
      "options": {
        "OpenGallery": "Vsix Open Gallery",
        "MyGetVsix": "MyGet Vsix service connection",
        "Marketplace": "Visual Studio Marketplace"
      }
    },
    {
      "name": "ConnectedServiceName",
      "type": "connectedService:Vsix-Tools-MyGet",
      "label": "MyGet Vsix feed connection",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Select the MyGet end point to use. If needed, click on 'manage', and add a new service endpoint of type 'MyGet Vsix'",
      "visibleRule": "UploadTo=MyGetVsix"
    },
    {
      "name": "PublishManifest",
      "type": "filePath",
      "label": "Publish manifest",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "[Publish Manifest file](https://docs.microsoft.com/en-us/visualstudio/extensibility/walkthrough-publishing-a-visual-studio-extension-via-command-line?view=vs-2017#publishmanifest-file)",
      "visibleRule": "UploadTo=Marketplace"
    },
    {
      "name": "PersonalAccessToken",
      "type": "text",
      "label": "Personal Access Token",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Personal Access Token for the Visual Studio Marketplace",
      "visibleRule": "UploadTo=Marketplace"
    },
    {
      "name": "WorkingDirectory",
      "type": "filePath",
      "label": "Working Directory",
      "defaultValue": "$(Build.ArtifactStagingDirectory)",
      "required": false,
      "helpMarkDown": "Specify the location of the vsix file."
    }
  ],
  "execution": {
    "PowerShell3": {
      "target": "$(currentDirectory)\\uploadVsix.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}